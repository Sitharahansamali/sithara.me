<style>
	.skills {
		padding: 5rem 2rem;
		background: #1a1a2e;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
	}

	.section-title {
		text-align: center;
		font-size: 2.5rem;
		margin-bottom: 1rem;
		color: #fff;
	}

	.section-description {
